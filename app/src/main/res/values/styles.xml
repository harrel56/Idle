<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BgTheme" parent="AppTheme">
        <item name="android:background">@mipmap/forest</item>
    </style>

    <style name="TabTheme" parent="AppTheme">
        <item name="android:background">@drawable/tab_bg</item>
    </style>

    <style name="TabTheme2" parent="AppTheme">
        <item name="android:background">@drawable/tab_bg2</item>
    </style>

    <style name="TransparentTheme" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:progressDrawable">@drawable/progress_bg</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
