<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_selector">

    <harrel.idle.AnimatingProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CustomBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/TransparentTheme"
        android:padding="3dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:theme="@style/TransparentTheme"
            android:src="@mipmap/ic_launcher_round"/>

        <harrel.idle.FontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:text="SAMPLE 1"
            android:theme="@style/TransparentTheme"/>

        <harrel.idle.FontTextView
            android:id="@+id/powerReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/img"
            android:text="SAMPLE 2"
            android:theme="@style/TransparentTheme"/>

        <harrel.idle.FontTextView
            android:id="@+id/powerPerSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/powerReq"
            android:layout_toRightOf="@id/img"
            android:text="SAMPLE 2"
            android:theme="@style/TransparentTheme"/>

        <harrel.idle.FontTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/powerPerSec"
            android:layout_toRightOf="@id/img"
            android:text="SAMPLE 2"
            android:theme="@style/TransparentTheme"/>

        <harrel.idle.FontButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="X"
            android:visibility="gone"/>

    </RelativeLayout>

</FrameLayout>
